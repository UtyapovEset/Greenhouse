<Window x:Class="Greenhose.CreatePlantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greenhose"
        mc:Ignorable="d"
        Title="CreatePlantsWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,0,10"/>

        <TextBlock Text="Сорт:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="SortComboBox" Width="200" Margin="0,0,10,0"/>
            <Button x:Name="AddSortButton" Content="Новый сорт" Width="100" Click="AddSortButton_Click"/>
        </StackPanel>

        <TextBlock Text="Дни роста:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox x:Name="GrowthDaysTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,0,15"/>

        <TextBlock Text="Температура:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox x:Name="TemperatureTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,15"/>

        <TextBlock Text="Влажность:" Grid.Row="3" Grid.Column="3" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox x:Name="HumidityTextBox" Grid.Row="3" Grid.Column="4" Margin="0,0,0,15"/>

        <Border Grid.Row="6" Grid.ColumnSpan="5" Background="Transparent"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Height="30" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Height="30" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>