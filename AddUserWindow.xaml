<Window x:Class="Greenhose.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greenhose"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="400" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Margin="0,0,0,15"/>

        <TextBlock Text="Пароль:" Grid.Row="2" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="0,0,0,15"/>

        <TextBlock Text="ФИО:" Grid.Row="4" Margin="0,0,0,5"/>
        <TextBox x:Name="FullNameTextBox" Grid.Row="5" Margin="0,0,0,15"/>

        <TextBlock Text="Роль:" Grid.Row="6" Margin="0,0,0,5"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="7" Margin="0,0,0,140">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="Agronomist"/>
            <ComboBoxItem Content="Technologist"/>
            <ComboBoxItem Content="Worker"/>
        </ComboBox>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment ="Bottom">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Height="30" 
                   Margin="0,0,10,0" Background="#4CAF50" Foreground="White" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Height="30" 
                   Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>