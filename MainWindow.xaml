<Window x:Class="Greenhose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greenhose"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2A3849" Padding="15" Height="60">
            <TextBlock Text="Управление тепличным хозяйством Атэна" 
                      FontSize="24" 
                      Foreground="White" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>

                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                   Background="#2196F3" 
                   CornerRadius="10"
                   Padding="20"
                   MouseLeftButtonDown="GreenhousesBlock_MouseLeftButtonDown">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    
                    <Viewbox Width="60" Height="60" Margin="0,0,0,15">
                        <Image Source="/icons/greenhouse_icon.png"/>
                    </Viewbox>

                    <TextBlock Text="Теплицы" 
                              Foreground="White" 
                              FontSize="20" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Управление теплицами и мониторинг состояния" 
                              Foreground="White" 
                              FontSize="12"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" 
                   Background="#4CAF50" 
                   CornerRadius="10"
                   Padding="20"
                   MouseLeftButtonDown="PlantsBlock_MouseLeftButtonDown">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    
                    <Viewbox Width="60" Height="60" Margin="0,0,0,15">
                        <Image Source="/icons/plants_icon.png"/>
                    </Viewbox>

                    <TextBlock Text="Растения" 
                              Foreground="White" 
                              FontSize="20" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Управление культурами и зонами посадки" 
                              Foreground="White" 
                              FontSize="12"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="4" 
                   Background="#607D8B" 
                   CornerRadius="10"
                   Padding="20"
                   MouseLeftButtonDown="CalendarBlock_MouseLeftButtonDown">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Viewbox Width="60" Height="60" Margin="0,0,0,15">
                        <Image Source="/icons/calendar_icon.png"/>
                    </Viewbox>

                    <TextBlock Text="Календарь работ" 
                              Foreground="White" 
                              FontSize="20" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Планирование и отслеживание агротехнических работ" 
                              Foreground="White" 
                              FontSize="12"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="AddUserButton" Width="50" Height="50" Background="BlueViolet" Grid.Column="0" Click="AddUserButton_Click">
                    <Image Source="/icons/i_newman.png"/>
                </Button>

                <TextBlock Text="ООО «Тепличное хозяйство Атэна» 2025" 
                          Foreground="#666" 
                          FontSize="11"
                          Grid.Column="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                <Button x:Name="Reports" Width="50" Height="50" Background="#9C27B0" Grid.Column="2" Click="Reports_Click">
                    <Image Source="/icons/reports_icon.png"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
