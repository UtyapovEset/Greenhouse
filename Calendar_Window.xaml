<Window x:Class="Greenhose.Calendar_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greenhose"
        mc:Ignorable="d"
        Title="Calendar_Window" Height="450" Width="800">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Height="60" Background="#2A3849" CornerRadius="5" Padding="15">
            <Grid>
                <Button x:Name="BackButton" Width="40" Height="40" Background="#2A3849"  HorizontalAlignment="Left"
                        VerticalAlignment="Center" Click="BackButton_Click">
                    <Image Source="/icons/close_icon.png"/>
                </Button>

                <TextBlock Text="Календарь агротехнических работ"
                           Foreground="White"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#F9F9F9"
                    Padding="20"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Выберите дату:"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <Calendar x:Name="MainCalendar"
                              SelectionMode="SingleDate"
                              SelectedDatesChanged="MainCalendar_SelectedDatesChanged"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    Background="White"
                    Padding="20"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="TasksHeader"
                               Text="Задачи на сегодня"
                               FontWeight="Bold"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               Margin="0 0 0 10"/>

                    <ListView x:Name="TasksList">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Время" DisplayMemberBinding="{Binding Time}" Width="80"/>
                                <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="250"/>
                                <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" Width="100"/>
                                <GridViewColumn Header="Исполнитель" DisplayMemberBinding="{Binding AssignedTo}" Width="120"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>